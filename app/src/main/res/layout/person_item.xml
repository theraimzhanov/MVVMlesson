<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="22sp"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Nursultan"/>

    <LinearLayout
        android:id="@+id/layoutAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textGender"
            style="@style/appearance"
            android:textColor="#9C27B0"
            android:text="Gender"/>

        <TextView
            android:id="@+id/textAge"
            style="@style/appearance"
            android:textColor="#F44336"
            android:text="Age"/>

        <TextView
            android:id="@+id/textEyeColor"
            style="@style/appearance"
            android:textColor="#2196F3"
            android:text="Eye color"/>
        <TextView
            android:id="@+id/textHairColor"
            style="@style/appearance"
            android:textColor="#FFC107"
            android:text="Hair color"/>
    </LinearLayout>

     <TextView
         android:id="@+id/btnFilm"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:padding="8dp"
         android:layout_marginTop="8dp"
         android:textStyle="bold"
         android:background="@drawable/shape_film"
         android:textColor="@color/white"
         app:layout_constraintTop_toBottomOf="@id/layoutAppearance"
         app:layout_constraintStart_toStartOf="@id/layoutAppearance"
         app:layout_constraintEnd_toEndOf="@id/layoutAppearance"
         android:text="About the film"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>